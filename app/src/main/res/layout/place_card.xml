<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/place_card"
    android:background="@color/cardview_light_background"
    android:clickable="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/business_pic"
        android:layout_weight="1"
        android:background="@color/cardview_shadow_start_color"
        android:adjustViewBounds="false"
        android:fitsSystemWindows="false"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="@color/cardview_dark_background"
        android:weightSum="1">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/business_name"
            android:textSize="24sp"
            android:padding="5dp"
            android:textStyle="normal|bold" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/location">

            <ImageView
                app:srcCompat="@drawable/marker"
                android:id="@+id/marker"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_width="80dp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:layout_weight="1"
                android:autoLink="map"
                android:background="@color/cardview_shadow_start_color"
                android:layout_toRightOf="@+id/marker"
                android:layout_alignTop="@+id/marker"
                android:layout_alignBottom="@+id/marker" />
        </RelativeLayout>

        <TextView
            android:text="TextView"
            android:layout_height="50dp"
            android:id="@+id/phone"
            android:drawableLeft="@android:drawable/ic_menu_call"
            android:gravity="center_vertical"
            android:drawablePadding="23dp"
            android:drawableStart="@android:drawable/ic_menu_call"
            android:autoLink="phone"
            android:layout_width="match_parent"
            android:paddingLeft="25dp" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/web">

            <ImageView
                app:srcCompat="@drawable/web"
                android:id="@+id/web_icon"
                android:layout_weight="1"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:padding="4dp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/website"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:layout_weight="1"
                android:autoLink="web"
                android:layout_toRightOf="@+id/web_icon"
                android:layout_alignTop="@+id/web_icon"
                android:layout_alignBottom="@+id/web_icon" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hours"
            android:padding="5dp"
            android:textStyle="normal|bold" />
    </LinearLayout>
</LinearLayout>